rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user belongs to the organisation
    function belongsToOrg(orgId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organisationId == orgId;
    }
    
    // User roles collection - separate from user profile for security
    // Users can only read their own role, only admins can write
    match /user_roles/{userId} {
      allow read: if isOwner(userId);
      allow create: if false; // Only server/admin can create roles
      allow update: if false; // Only server/admin can update roles
      allow delete: if false; // Roles cannot be deleted via client
    }
    
    // Users collection - users can only read/write their own document
    // IMPORTANT: role field should NOT be used - roles are in user_roles collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      // Prevent users from modifying sensitive fields
      allow update: if isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      allow delete: if false; // Users cannot delete their own accounts via client
    }
    
    // Organisations collection
    match /organisations/{orgId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if belongsToOrg(orgId);
      allow delete: if false; // Organisations cannot be deleted via client
    }
    
    // Listings collection
    match /listings/{listingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.organisationId != null &&
        belongsToOrg(request.resource.data.organisationId);
      allow update: if isAuthenticated() && 
        belongsToOrg(resource.data.organisationId);
      allow delete: if isAuthenticated() && 
        belongsToOrg(resource.data.organisationId);
    }
    
    // Requests collection
    match /requests/{requestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.organisationId != null &&
        belongsToOrg(request.resource.data.organisationId);
      allow update: if isAuthenticated() && 
        belongsToOrg(resource.data.organisationId);
      allow delete: if isAuthenticated() && 
        belongsToOrg(resource.data.organisationId);
    }
    
    // Matches collection
    match /matches/{matchId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if false;
    }
    
    // User ratings collection
    match /user_ratings/{ratingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.ratedByUserId == request.auth.uid;
      allow update: if false; // Ratings cannot be updated
      allow delete: if false; // Ratings cannot be deleted
    }
    
    // Analytics events - write only, no client reads
    match /user_events/{eventId} {
      allow read: if false;
      allow create: if isAuthenticated();
      allow update: if false;
      allow delete: if false;
    }
    
    match /match_events/{eventId} {
      allow read: if false;
      allow create: if isAuthenticated();
      allow update: if false;
      allow delete: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}